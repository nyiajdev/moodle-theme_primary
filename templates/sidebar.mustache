<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="{{ siteurl }}" class="brand-link">
        {{# output.should_display_navbar_logo }}
            <img src="{{output.get_compact_logo_url}}" alt="{{ sitename }}" class="brand-image img-circle elevation-3" style="opacity: .8">
        {{/ output.should_display_navbar_logo }}
        <span class="brand-text font-weight-light">{{ sitename }}</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        {{{ output.user_panel }}}

        {{> theme_primary/flat_navigation }}
    </div>
    <!-- /.sidebar -->
</aside>