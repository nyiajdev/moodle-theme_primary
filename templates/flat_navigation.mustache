{{!
    @template theme_boost/flat_navigation

    Display the flat navigation for the boost theme

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * flatnavigation - array of flat_navigation_nodes
      * showdivider - boolean
      * action - string
      * isactive - boolean
      * get_indent - integer
      * is_section - boolean
      * text - HTML

    Example context (json):
    {
        "flatnavigation" : [
            {
                "showdivider": false,
                "action": "#",
                "isactive": true,
                "get_indent": 1,
                "is_section": false,
                "text": "First"
            },{
                "showdivider": true,
                "action": "#",
                "isactive": false,
                "get_indent": 0,
                "is_section": true,
                "text": "Last &amp; Second"
            }
        ]
    }
}}
<!-- Sidebar Menu -->
<nav class="mt-2" aria-label="{{firstcollectionlabel}}">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        {{# flatnavigation }}
            {{#showdivider}}
                <li class="nav-item" aria-label="{{get_collectionlabel}}"><hr></li>
            {{/showdivider}}
            {{#action}}
                <li class="nav-item {{#classes}}{{.}} {{/classes}}">
                    <a href="{{{action}}}" class="nav-link {{#isactive}}active{{/isactive}}">
                        {{#icon.pix}}
                            <span class="nav-icon-container">{{#pix}}{{{icon.pix}}}, {{{icon.component}}}, {{{icon.alt}}}{{/pix}}</span>
                        {{/icon.pix}}
                        <p class="{{#isactive}}font-weight-bold{{/isactive}}">{{{text}}}</p>
                    </a>
                </li>
            {{/action}}
        {{/ flatnavigation }}
    </ul>
</nav>